{
  "title": "Emacs keybind",
  "rules": [
    {
      "description": "Send down when press ctrl+n",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]        
        }
      ]
    },
    {
      "description": "Send up when press ctrl+p",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]        
        }
      ]
    }
  ]
}